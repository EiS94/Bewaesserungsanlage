<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="icon">@drawable/action_bar_icon</item>
    </style>

    <style name="UpdatedScene" parent="DefaultScene">
        <item name="middle">#db486e</item>
        <item name="bad">#22c7f7</item>
    </style>

    <style name="DefaultScene">
        <item name="middle">#fec758</item>
        <item name="bad">#f22424</item>
        <item name="good">#0c6d00</item>
    </style>


</resources>
